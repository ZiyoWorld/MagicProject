@using MagicProject.Models;
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Site.css" />
    <title>PRF</title>
</head>
<body>
    <script>
        function aaa() {
            f = document.getElementById("first");
            f.action = "Index";
            f.submit();
        }
    </script>

    <div class="container">
        <header>
            <h1 class="text-center text-primary"> Welcome Magic </h1>
        </header>
        <main class="mt-4">
            <div class="row">
                <div class="col-6 a1-main">
                    <h2>Какой Профессия ?</h2>

                    <form action="~/Magic/OCC" id="first" class="form-check">

                        @foreach (var r in ViewBag.Profeses)
                        {
                            <input type="radio" value="@r.ID" id="radioButton1" name="prf"><label for="radioButton1">@r.Name</label><br />
                        }

                        <div class="d-flex mt-2">
                            <button class="btn btn-success btn-sm" onclick="aaa();">Index</button>
                            <button class="btn btn-primary btn-sm" style="margin-left: 10px">Next</button><br />
                        </div>
                    </form>
                </div>


            </div>

        </main>

    </div>




</body>
</html>
