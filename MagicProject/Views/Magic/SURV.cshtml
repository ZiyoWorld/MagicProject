@model  MagicProject.Controllers.Parms
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Confirm</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <script>
        function bbb() {
            a = document.getElementById("first");

            a.action = "POS";
            a.submit();
        }


    </script>

    <div class="container">
        <header>
            <h1 class="text-center text-primary"> Welcome MAGIC </h1>
        </header>
        <main class="mt-4">
            <div class="row">
                <div class="col-4 a1-main">
                    <h2>Анкета USER</h2>

                    <form action="~/Magic/Save" id="first" class="form-check">

                        <input type="hidden" name="prf" value="@Model.prf" />
                        <input type="hidden" name="occ" value="@Model.occ" />
                        <input type="hidden" name="frm" value="@Model.frm" />
                        <input type="hidden" name="pos" value="@Model.pos" />

                        <p>Какой Профессия: @Model.prf</p>
                        <p>Какой занятност: @Model.occ</p>
                        <p>Какой форм: @Model.frm</p>
                        <p>Какой позиция: @Model.pos</p>


                        <div class="d-flex mt-2">
                            <button class="btn btn-success btn-sm" style="margin: 0 10px" onclick="bbb();">Prev</button>
                            <button class="btn btn-primary btn-sm">Save</button><br />
                        </div>
                    </form>
                </div>

                <div class="col-8 col-lg-offset-1 ">
                    <img width="95%" src="https://need.travel/wp-content/uploads/2021/03/plyazh-Konyaalty3.jpg" />
                </div>
            </div>

        </main>

        <footer>
        </footer>

    </div>





</body>
</html>
